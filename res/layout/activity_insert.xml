<?xml version = "1.0" encoding = "UTF-8"?>

<LinearLayout  
xmlns:android = "https://schemas.android.com/apk/res/android"
xmlns:tools = "https://schemas.android.com/tools"
android:layout_width = "wrap_content" 
android:layout_height = "wrap_content"
android:padding = "@dimen/standard_group_padding_1" 
android:id = "@+id/activity_insert_1"
android:orientation = "vertical">

    <RelativeLayout
    android:id= "@+id/activity_insert_1_1" 
    android:layout_width = "match_parent" 
    android:layout_height = "wrap_content"
    android:padding = "@dimen/standard_group_padding"
    android:layout_weight = "1"
    android:layout_margin= "@dimen/standard_group_margin_1" >
        <Button 
        android:id = "@+id/activity_insert_1_1_1" 
        android:width ="@dimen/standard_button_width_1" 
        android:height = "@dimen/standard_button_height_1" 
        android:layout_alignLeft =  "@id/activity_insert_1_1"/>
        <Button 
        android:id = "@+id/activity_insert_1_1_2"
        android:layout_width = "@dimen/standard_button_width"
        android:layout_height = "@dimen/standard_button_height" 
        android:layout_alignRight= "@id/activity_insert_1_1"/>
    </RelativeLayout>

    <LinearLayout
    android:layout_width = "match_parent"
    android:id= "activity_insert_1_2" 
    android:layout_height = "wrap_content" 
    android:orientation = "vertical"
    android:layout_weight = "2"
    layout_gravity ="centre_vertical">
    
     </LinearLayout>
       <RelativeLayout
        android:id = "@+id/activity_insert_1_3"
        android:layout_gravity = "bottom"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight = "1">
            <EditText
            android:hint = "Enter the String to include"
            android:id  = "@+id/activity_insert_1_3_1"
            android:layout_width =  "@dimen/standard_edit_text_height_1"
            android:layout_height = "@dimen/standard_edit_text_width_1"
            android:layout_alignParentLeft = "true"
            android:centre_vertical = "true" />
            <EditText 
            android:hint = "Enter the indexes to remove"
            android:id = "@+id/activity_insert_1_3_2" 
            android:layout_height = "@dimen/standard_edit_text_height_1"
            android:layout_width = "@dimen/standard_edit_text_width_1"
            android:layout_alignRight = "@+id/activity_insert_1_2"
            android:centre_vertical = "true" />
        </RelativeLayout>
    <RelativeLayout
    android:layout_height = "match_parent"
    android:layout_width = "wrap_content"
    android:layout_margin = "@dimen/standard_container_padding_1"
    android:id = "@+id/activity_insert_1_4"
    android:layout_gravity = "bottom"
    android:layout_weight =  "1">
        <Button
        android:id = "@+id/activity_insert_1_4_1"
        android:layout_width = "@dimen/standard_button_width_1"
        android:layout_height = "@dimen/standard_button_height_1"
        android:layout_alignParentLeft = "true"/>
        <Button 
        android:id = "@+id/activity_insert_1_4_2"
        android:layout_width = "@dimen/standard_button_width_1" 
        android:layout_height = "@dimen/standard_button_height_1"
        android:center_horizontal = "true" />
        <Button 
        android:id = "@+id/activity_insert_1_4_3"
        android:layout_height = "@dimen/standard_button_height_1"
        android:layout_width =  "@dimen/standard_button_width_1"
        android:alignParentRight = "true" />
    </RelativeLayout>
</LinearLayout>