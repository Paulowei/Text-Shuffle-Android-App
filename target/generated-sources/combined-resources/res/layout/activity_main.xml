<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android_id = "activity_main_1" >
    <LinearLayout
    android:id = "activity_main_1_1"
    android:layout_width = "match_parent"
    android:layout_height ="wrap_content"
    android:orientation = "vertical" 
    android:layout_centreVertical = "true"
    android:layout_centreHorizontal = "true" 
    android:layout_marginTop = "60px"
    android:layout_marginBottom = "40px" >
        <LinearLayout
        android:id = "activity_main_1_1_1"
        android:layout_width = "match_parent"
        android:layout_height ="wrap_content"
         android:layout_marginTop = "10dp"
         android:layout_gravity = "top"  >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:padding = "@dimen/actiity_main_textview_padding_1"  
            android:id ="activity_main_textview_1_1_1_1"
            android:layout_gravity = "centre"  />
        </LinearLayout>
        <GridLayout
        android:layout_width ="match_parent"
        android:layout_height = "wrap_content" 
        android:orientation = "horizontal"
        android:id = "activity_main_1_1_2"
        android:columnCount = "2"
        android:rowCount = "2"
        android:layout_marginBottom= "10dp"
        android:layout_gravity= "bottom">
            <Button 
             android:id ="activity_main_1_1_2_1"
            android:layout_height = "35px"
            android:layout_width = "wrap_content" 
            android:layout_column ="0"
            android:layout_row = "0"
            android:layout_rowSpan = "1">
            <Button
            android:id = "activity_main_1_1_2_2"
            android:layout_rowSpan = "1"
            android:layout_height= "35px"
            android:layout_width ="wrap_content"
            android:layout_row = "0"
            android:layout_column = "1"
            android:layout_columnSpan = "1" >
         </GridLayout>
    </LinearLayout>

</RelativeLayout>